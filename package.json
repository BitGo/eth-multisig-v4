{
  "name": "eth-multisig-v4",
  "version": "1.0.0",
  "description": "Ethereum multi signature wallet contract supporting single-tx execute and confirm with multiple owners",
  "author": "BitGo DeFi/ETH Team",
  "license": "ISC",
  "private": true,
  "directories": {
    "test": "test"
  },
  "scripts": {
    "deploy-prod": "hardhat run scripts/deploy.ts --network",
    "deploy-test": "hardhat run scripts/deploy.ts --network",
    "deploy-batcher": "hardhat run scripts/deployBatcherContract.ts --network",
    "update-gas-limit": "hardhat run scripts/updateTransferGasLimit.ts --network",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "solhint": "./node_modules/.bin/solhint --fix 'contracts/**/*.sol'",
    "prettier-check": "prettier --config .prettierrc --check \"**/*.{js,ts}\"",
    "prettier-lint": "./node_modules/.bin/prettier --config .prettierrc --write './**/*.js' './**/*.ts'",
    "prettier:solidity": "./node_modules/.bin/prettier --write contracts/*.sol",
    "lint": "npm run prettier-check"
  },
  "keywords": [
    "multi-sig",
    "wallet",
    "ethereum"
  ],
  "dependencies": {
    "@msgpack/msgpack": "^3.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "5.0.0",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.4",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^6.7.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.0",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "hardhat": "^2.26.2",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "sinon": "^21.0.0",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.8.16",
    "truffle-assertions": "^0.9.2",
    "ts-node": "^10.4.0",
    "typechain": "^8.3.2",
    "typescript": "^4.5.5",
    "web3": "^1.7.0"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=7"
  }
}
